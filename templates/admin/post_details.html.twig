<div class="border rounded-lg p-4 mb-4 shadow hover:shadow-lg transition duration-200">
    
    <div class="flex flex-col md:flex-row gap-4">

        {# Texto do post: ocupa 2/3 #}
        <div class="md:w-2/3">
            <p class="text-gray-800 mb-4">{{ entity.content|raw }}</p>

            <h4 class="font-semibold text-gray-700 mb-2">Comments:</h4>
            <ul class="list-disc list-inside text-gray-700">
                {% for comment in entity.comments %}
                    <li class="mb-1">
                        {{ comment.content }} 
                        <small class="text-gray-500">({{ comment.createdAt|date('d/m/Y H:i') }})</small>
                    </li>
                {% else %}
                    <li>No comments yet</li>
                {% endfor %}
            </ul>

            {# Bot√µes Edit e Delete #}
            <div class="mt-4 flex gap-2">
                <a href="{{ path('admin_post_edit', {'id': entity.id}) }}" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">Edit</a>
                <a href="{{ path('admin_post_delete', {'id': entity.id}) }}" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition">Delete</a>
            </div>
        </div>

        {# Imagem do post: ocupa 1/3 #}
        {% if entity.image %}
            <div class="md:w-1/3">
                <img src="{{ asset('/uploads/images/' ~ entity.image) }}" alt="{{ entity.title }}" class="rounded-lg w-full h-auto object-cover shadow">
            </div>
        {% endif %}

    </div>

</div>
