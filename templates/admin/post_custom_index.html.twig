<div style="display:flex; gap:20px; margin-bottom:20px; border:1px solid #ccc; padding:15px; border-radius:8px; background:#333;">
    {# Conteúdo à esquerda - ocupa 2/3 #}
    <div style="flex:2; font-family:sans-serif; color:#fff;">
        <h3 style="font-weight:bold;">{{ post.title|striptags }}</h3>
        <p>{{ post.content|striptags }}</p>

        {# Comentários #}
        <div style="margin-top:15px;">
            <strong>Comments:</strong>
            <ul>
                {% for comment in post.comments %}
                    <li>{{ comment.content|striptags }} ({{ comment.createdAt|date('d F Y') }})</li>

                {% else %}
                    <li>No comments yet</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    {# Imagem à direita - ocupa 1/3 #}
    {% if post.image %}
        <div style="flex:1;">
            <img src="{{ asset('/uploads/images/' ~ post.image) }}" alt="{{ post.title|striptags }}" style="max-width:100%; border-radius:8px;">
        </div>
    {% endif %}
</div>
